<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/layout_bg_my_value"
    android:layout_width="@dimen/x341"
    android:layout_height="@dimen/x341">
<TextView
    android:id="@+id/tv_departments_name"
    android:text="营销中心"
    android:textColor="@color/colorTextTheme"
    android:textSize="@dimen/x36"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_distribution_ratio"
        android:layout_marginTop="@dimen/x18"
        android:text="分配比例：15%"
        android:textColor="@color/colorTextGray"
        android:textSize="@dimen/x28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
   </LinearLayout>
</LinearLayout>
