<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.dy.vam.ui.widget.StickyScrollView
        android:id="@+id/hove_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorTheme"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x250"
                android:background="@color/colorTheme">

                <LinearLayout
                    android:id="@+id/layout_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/user_icon"
                        android:layout_width="@dimen/x180"
                        android:layout_height="@dimen/x180"
                        android:layout_centerHorizontal="true" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_top_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:background="@color/colorTheme"
                android:gravity="center"
                android:orientation="horizontal"
                android:tag="sticky">

                <TextView
                    android:id="@+id/tv_user_name"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center|center_vertical"
                    android:text="王明阁"
                    android:textColor="@color/colorTextTheme"
                    android:textSize="@dimen/x35" />

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_toRightOf="@+id/tv_user_name"
                    android:gravity="center"
                    android:text="Android"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/x35" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x60" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1150"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30">

                <LinearLayout
                    android:id="@+id/layout_total_details"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x360"
                    android:layout_marginTop="@dimen/x30"
                    android:background="@drawable/layout_bg_my_value"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/x30">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_total_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="个人可分配价值总额："
                            android:textColor="@color/colorTheme"
                            android:textSize="@dimen/x32" />

                        <TextView
                            android:id="@+id/tv_total_individual_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥-"
                            android:textColor="@color/colorTheme"
                            android:textSize="@dimen/x32"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已分配金额："
                            android:textColor="@color/colorTheme"
                            android:textSize="@dimen/x32" />

                        <TextView
                            android:id="@+id/tv_allocated_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥-"
                            android:textColor="@color/colorTheme"
                            android:textSize="@dimen/x32"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="待分配金额："
                            android:textColor="@color/colorTheme"
                            android:textSize="@dimen/x32" />

                        <TextView
                            android:id="@+id/tv_amount_to_be_allocated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥-"
                            android:textColor="@color/colorTextTheme"
                            android:textSize="@dimen/x32"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/x33"
                            android:text="查看详情"
                            android:textColor="@color/colorTextGray"
                            android:textSize="@dimen/x24" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_commission_details"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x360"
                    android:layout_marginTop="@dimen/x20"
                    android:background="@drawable/layout_bg_my_value"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/x30">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_production_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="提成总额："
                            android:textColor="@color/colorTheme"
                            android:textSize="@dimen/x32" />

                        <TextView
                            android:id="@+id/tv_total_amount_of_production"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥-"
                            android:textColor="@color/colorTheme"
                            android:textSize="@dimen/x32"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已分配金额："
                            android:textColor="@color/colorTheme"
                            android:textSize="@dimen/x32" />

                        <TextView
                            android:id="@+id/tv_commission_allocated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥-"
                            android:textColor="@color/colorTheme"
                            android:textSize="@dimen/x32"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="待分配金额："
                            android:textColor="@color/colorTheme"
                            android:textSize="@dimen/x32" />

                        <TextView
                            android:id="@+id/tv_not_allocated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥-"
                            android:textColor="@color/colorTextTheme"
                            android:textSize="@dimen/x32"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/x33"
                            android:text="查看详情"
                            android:textColor="@color/colorTextGray"
                            android:textSize="@dimen/x24" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layout_my_panel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:layout_marginBottom="@dimen/x50"
                    android:layout_marginTop="@dimen/x20"
                    android:background="@drawable/layout_bg_my_value"
                    android:paddingLeft="@dimen/x24"
                    android:paddingRight="@dimen/x24">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="我的任务看板"
                        android:textColor="@color/colorTextGray" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/icon_rignt_copy" />
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>
    </com.dy.vam.ui.widget.StickyScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100">

        <ImageView
            android:id="@+id/image_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x70"
            android:background="@mipmap/icon_setting" />
    </RelativeLayout>

    <View
        android:id="@+id/view_show_pop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>