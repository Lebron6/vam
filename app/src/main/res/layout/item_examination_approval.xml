<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x24"
    android:paddingTop="@dimen/x49"
    android:paddingRight="@dimen/x35">

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_pic"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_toRightOf="@+id/image_pic"
            android:text="报销审批"
            android:textColor="@color/colorTheme"
            android:textSize="@dimen/x32" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x231"
            android:text="2017.10.2"
            android:textColor="@color/colorTextShollwGray"
            android:textSize="@dimen/x24" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x90">

        <TextView
            android:id="@+id/tv_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="说明：杭州出差"
            android:textColor="@color/colorTextShollwGray"
            android:textSize="@dimen/x32" />

        <!--<TextView-->
            <!--android:id="@+id/tv_content_title"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="@dimen/x20"-->
            <!--android:text="报销类型：办公用品费"-->
            <!--android:textColor="@color/colorTextGray"-->
            <!--android:textSize="@dimen/x28" />-->

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:text="报销金额：200元"
            android:textColor="@color/colorTextShollwGray"
            android:textSize="@dimen/x32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:layout_marginTop="@dimen/x20"
        android:paddingLeft="@dimen/x90">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="待审批"
            android:textColor="@color/colorTextTheme"
            android:textSize="@dimen/x36" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/x28"
        android:background="@color/colorRecyItemGray" />
</LinearLayout>