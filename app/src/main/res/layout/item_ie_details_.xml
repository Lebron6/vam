<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x170"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="@dimen/x56"
        android:layout_marginLeft="@dimen/x57"
        android:layout_marginRight="@dimen/x29"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_green"
            android:scaleType="fitCenter"
            app:riv_corner_radius="30dip"
            app:riv_border_color="#333333"
            app:riv_mutate_background="true"
            app:riv_tile_mode="repeat"
            app:riv_oval="true"
            android:background="@mipmap/quan_lv"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20" />
        <TextView
            android:layout_toRightOf="@+id/image_green"
            android:id="@+id/tv_type"
            android:layout_marginLeft="@dimen/x22"
            android:textColor="@color/colorTextGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="存续客户总收入（元）"
            android:textSize="@dimen/x28" />
        <TextView
            android:textSize="@dimen/x24"
            android:textColor="@color/colorTextTheme"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_persont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout  android:layout_marginLeft="@dimen/x57"
        android:layout_marginRight="@dimen/x29"
        android:layout_marginTop="@dimen/x23"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x68">
        <TextView
            android:id="@+id/tv_time"
            android:layout_centerVertical="true"
            android:textColor="@color/colorTextGray"
            android:text="2017/01——2017/06"
            android:textSize="@dimen/x24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_number"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorTheme"
            android:text="+1520000"
            android:textStyle="bold"
            android:textSize="@dimen/x48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:layout_marginRight="@dimen/x24"
        android:layout_marginLeft="@dimen/x24"
        android:background="@color/colorRecyItemGray"
        android:layout_marginTop="@dimen/x42"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"/>

</LinearLayout>