<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>
    <EditText
        android:id="@+id/et_old_password"
        android:layout_width="@dimen/x670"
        android:paddingLeft="@dimen/x20"
        android:layout_height="@dimen/x100" android:textColor="@color/colorTextGray"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x89"
        android:background="@drawable/et_bg_gray"
        android:gravity="left|center_vertical"
        android:textColorHint="@color/colorTextShollwGray"
        android:hint="原密码"
        android:inputType="textPassword"
        android:textCursorDrawable="@drawable/edit_cursor_theme" />
<EditText
    android:id="@+id/et_password"
        android:layout_width="@dimen/x670"
        android:paddingLeft="@dimen/x20" android:inputType="textPassword"
        android:layout_height="@dimen/x100" android:textColor="@color/colorTextGray"
        android:layout_gravity="center_horizontal"
       android:layout_marginTop="@dimen/x30"
        android:background="@drawable/et_bg_gray"
        android:gravity="left|center_vertical"
        android:textColorHint="@color/colorTextShollwGray"
        android:hint="新密码"
        android:textCursorDrawable="@drawable/edit_cursor_theme" />
    <EditText
        android:id="@+id/et_re_password"
        android:layout_width="@dimen/x670"
        android:paddingLeft="@dimen/x20"
        android:layout_height="@dimen/x100" android:textColor="@color/colorTextGray"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x30" android:inputType="textPassword"
        android:background="@drawable/et_bg_gray"
        android:gravity="left|center_vertical"
        android:textColorHint="@color/colorTextShollwGray"
        android:hint="确认新密码"
        android:textCursorDrawable="@drawable/edit_cursor_theme" />

    <RelativeLayout
        android:layout_width="@dimen/x656"
        android:layout_height="@dimen/x188"
        android:background="@mipmap/btn"
        android:layout_gravity="center_horizontal"
        >

        <Button
            android:id="@+id/btn_commit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/x580"
            android:layout_height="@dimen/x88"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_bg_selector"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/x32" />
    </RelativeLayout>

</LinearLayout>
