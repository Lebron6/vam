<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x24"
        android:paddingTop="@dimen/x49"
        android:paddingRight="@dimen/x35">


        <RelativeLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_pic"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x60"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x30"
                android:layout_toRightOf="@+id/image_pic"
                android:text="我的差旅费报销"
                android:textColor="@color/colorTheme"
                android:textSize="@dimen/x32" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x231"
                android:text="2017.10.2"
                android:textColor="@color/colorTextShollwGray"
                android:textSize="@dimen/x24" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x150"
                android:layout_marginTop="@dimen/x10"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x90">

                <TextView
                    android:id="@+id/tv_explain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="事由：杭州出差"
                    android:textColor="@color/colorTextShollwGray"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/tv_all_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="1000"
                    android:textColor="@color/colorTextShollwGray"
                    android:textSize="@dimen/x32" />
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="待审批"
                    android:textColor="@color/colorTextRedTwo"
                    android:textSize="@dimen/x36" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/al_select_"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/x100"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:gravity="center">
                <CheckBox
                    android:id="@+id/cb_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cb_bg_button_selector"
                    android:button="@null" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/x28"
        android:background="@color/colorRecyItemGray" />
</LinearLayout>