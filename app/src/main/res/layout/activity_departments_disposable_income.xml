<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_alignParentTop="true"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content">
        <include layout="@layout/toolbar" />

    </LinearLayout>

<RelativeLayout
    android:background="@color/colorTheme"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x220">
    <LinearLayout
        android:layout_marginTop="@dimen/x68"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:text="部门可支配总收入"
            android:textSize="@dimen/x32"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="￥"
            android:textSize="@dimen/x24"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_all_money"
            android:text="-"
            android:textSize="@dimen/x36"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
<TextView
    android:layout_centerHorizontal="true"
    android:layout_marginTop="@dimen/x139"
    android:id="@+id/tv_percent"
    android:textColor="@color/colorTextTheme"
    android:textSize="@dimen/x28"
    android:text="分配比例:%24"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
</RelativeLayout>
<android.support.v7.widget.RecyclerView
    android:id="@+id/rv_departmental_disposable_income"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</android.support.v7.widget.RecyclerView>
</LinearLayout>
