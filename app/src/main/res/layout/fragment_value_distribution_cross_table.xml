<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layout_title_type"
        android:background="@color/colorEtGray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x98"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/layout_cb_vis"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="right|center_vertical">

            <CheckBox
                android:id="@+id/cb_select_all"
                style="@style/CustomCheckboxTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="员工"
                android:textColor="@color/colorTextTheme"
                android:textSize="@dimen/x30" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="部门"
                android:textColor="@color/colorTextTheme"
                android:textSize="@dimen/x30" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第一"
                android:textColor="@color/colorTextTheme"
                android:textSize="@dimen/x24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="季度"
                android:textColor="@color/colorTextTheme"
                android:textSize="@dimen/x24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第二"
                android:textColor="@color/colorTextTheme"
                android:textSize="@dimen/x24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="季度"
                android:textColor="@color/colorTextTheme"
                android:textSize="@dimen/x24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第三"
                android:textColor="@color/colorTextTheme"
                android:textSize="@dimen/x24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="季度"
                android:textColor="@color/colorTextTheme"
                android:textSize="@dimen/x24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第四"
                android:textColor="@color/colorTextTheme"
                android:textSize="@dimen/x24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="季度"
                android:textColor="@color/colorTextTheme"
                android:textSize="@dimen/x24" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总额(元)"
                android:textColor="@color/colorTextTheme"
                android:textSize="@dimen/x30" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已分配"
                android:textColor="@color/colorTextTheme"
                android:textSize="@dimen/x30" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应分配"
                android:textColor="@color/colorTextTheme"
                android:textSize="@dimen/x30" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额"
                android:textColor="@color/colorTextTheme"
                android:textSize="@dimen/x32" />
        </RelativeLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_below="@+id/layout_title_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

   <RelativeLayout     android:layout_marginRight="@dimen/x52" android:layout_marginBottom="@dimen/x100"
       android:layout_alignParentBottom="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <Button
           android:layout_toLeftOf="@+id/tv_see_unassigned"
           android:id="@+id/btn_setting"
           android:layout_width="@dimen/x250"
           android:layout_height="@dimen/x72"
           android:background="@drawable/btn_bg_selector"
           android:gravity="center"
           android:text="设为已分配"
           android:textColor="@color/white"
           android:textSize="@dimen/x32" />

       <TextView
           android:layout_alignParentRight="true"
           android:id="@+id/tv_see_unassigned"
           android:text="查看未分配人员"
           android:textSize="@dimen/x28"
           android:gravity="center"

           android:layout_marginLeft="@dimen/x17"
           android:background="@drawable/btn_bg_text_stroke"
           android:textColor="@color/colorTextTheme"
           android:layout_width="@dimen/x250"
           android:layout_height="@dimen/x72"/>
   </RelativeLayout>

</RelativeLayout>
