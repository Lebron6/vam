<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"><include layout="@layout/toolbar" />
            <EditText
                android:id="@+id/et_phone_num"
                android:layout_width="@dimen/x670"  android:singleLine="true"
                android:paddingLeft="@dimen/x20"
                android:layout_height="@dimen/x100"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x50"
                android:background="@drawable/et_bg_gray"
                android:gravity="left|center_vertical"
                android:textColor="@color/colorTextGray"
                android:textColorHint="@color/colorTextShollwGray"
                android:hint="手机号"
                android:textCursorDrawable="@drawable/edit_cursor_theme" />
            <EditText
                android:id="@+id/et_position"
                android:layout_width="@dimen/x670"  android:singleLine="true"
                android:paddingLeft="@dimen/x20"
                android:layout_height="@dimen/x100"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/x50"
                android:background="@drawable/et_bg_gray"
                android:gravity="left|center_vertical"
                android:textColor="@color/colorTextGray"
                android:textColorHint="@color/colorTextShollwGray"
                android:hint="职位"
                android:textCursorDrawable="@drawable/edit_cursor_theme" />
            <RelativeLayout  android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/x670"
                android:layout_height="@dimen/x100"
                android:layout_marginTop="@dimen/x50">


                <EditText
                    android:id="@+id/et_depart"
                    android:layout_width="@dimen/x670"
                    android:enabled="false"
                    android:paddingLeft="@dimen/x20"  android:singleLine="true"
                    android:layout_height="@dimen/x100"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/et_bg_gray"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/colorTextGray"
                    android:textColorHint="@color/colorTextShollwGray"
                    android:hint="部门"
                    android:textCursorDrawable="@drawable/edit_cursor_theme" />

                <ImageView
                    android:id="@+id/image_show_departs"
                    android:background="@mipmap/icon_down_b"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


            <RelativeLayout  android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/x670"
                android:layout_height="@dimen/x100"
                android:layout_marginTop="@dimen/x50">


                <EditText
                    android:layout_width="@dimen/x670"
                    android:paddingLeft="@dimen/x20"
                    android:layout_height="@dimen/x100"
                    android:enabled="false"  android:singleLine="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/et_bg_gray"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/colorTextGray"
                    android:textColorHint="@color/colorTextShollwGray"
                    android:hint="设置为部门主管"
                    android:textCursorDrawable="@drawable/edit_cursor_theme" />

                <CheckBox
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x37"
                    android:layout_centerVertical="true"
                    android:id="@+id/cb_set_post"
                    android:focusableInTouchMode="false"
                    style="@style/CustomCheckboxTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="@dimen/x656"
                android:layout_height="@dimen/x188"
                android:background="@mipmap/btn"
                android:layout_gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/btn_updata"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="@dimen/x580"
                    android:layout_height="@dimen/x88"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_bg_selector"
                    android:gravity="center"
                    android:text="修改"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x32" />
            </RelativeLayout>
          </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>