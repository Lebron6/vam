<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/titlebar"
        layout="@layout/toolbar" />


    <EditText
        android:id="@+id/edit_feed_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x483"
        android:layout_below="@+id/titlebar"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/x28"
        android:layout_marginRight="@dimen/x28"
        android:layout_marginTop="@dimen/x70"
        android:background="@drawable/et_bg_gray"
        android:gravity="left|top"
        android:hint="请输入反馈信息"
        android:padding="@dimen/x34"
        android:textSize="@dimen/x28"
        android:textColor="@color/colorTextGray"
        android:textCursorDrawable="@drawable/edit_cursor_theme"
         />
    <RelativeLayout
        android:layout_width="@dimen/x656"
        android:layout_height="@dimen/x188"
        android:background="@mipmap/btn"
        android:layout_gravity="center_horizontal"
        >

        <Button
            android:id="@+id/btn_commit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/x580"
            android:layout_height="@dimen/x88"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_bg_selector"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/x32" />
    </RelativeLayout>
</LinearLayout>
