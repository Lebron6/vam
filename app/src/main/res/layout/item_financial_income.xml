<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x178"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginTop="@dimen/x35"
            android:layout_marginRight="@dimen/x24">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="存续客户总收入"
                android:textColor="@color/colorTheme"
                android:textSize="@dimen/x32" />

            <TextView
                android:id="@+id/tv_view_details"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="查看明细"
                android:textColor="@color/colorTextTheme"
                android:textSize="@dimen/x32"
                android:visibility="invisible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:layout_marginTop="@dimen/x20"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x24"
            android:paddingRight="@dimen/x23">

            <EditText
                android:id="@+id/et_money"
                android:layout_width="@dimen/x650"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/x21"
                android:background="@drawable/et_bg_gray"
                android:enabled="true"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:textColor="@color/colorTextGray"
                android:textCursorDrawable="@drawable/edit_cursor_theme" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="元"
                android:textColor="@color/colorTheme"
                android:textSize="@dimen/x32" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>