<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x82"
    android:gravity="center">
    <LinearLayout
        android:id="@+id/layout_title_type"
        android:background="@color/white"
        android:layout_width="@dimen/y1334"
        android:layout_height="@dimen/x98"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_cb_vis"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="right|center_vertical">

            <CheckBox
                android:id="@+id/cb_select"
                android:clickable="false"
                android:focusable="false"
                android:visibility="visible"
                android:focusableInTouchMode="false"
                style="@style/CustomCheckboxTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="员工"
                android:textColor="@color/colorTheme"
                android:textSize="@dimen/x28" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_Depart_name"
                android:maxLength="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="部门部门部门部门"
                android:textColor="@color/colorTheme"
                android:textSize="@dimen/x28" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_first_money"    android:layout_margin="@dimen/x3"
                android:padding="@dimen/x3"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500000"
                android:textColor="@color/colorTextGray"
                android:textSize="@dimen/x28" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_second_money"   android:layout_margin="@dimen/x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500000"  android:gravity="center"
                android:textColor="@color/colorTextGray"
                android:textSize="@dimen/x28" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_third_money"   android:layout_margin="@dimen/x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500000"  android:gravity="center"
                android:textColor="@color/colorTextGray"
                android:textSize="@dimen/x28" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_forth_money"   android:layout_margin="@dimen/x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500000"  android:gravity="center"
                android:textColor="@color/colorTextGray"
                android:textSize="@dimen/x28" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_all_money"  android:layout_margin="@dimen/x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20000"  android:gravity="center"
                android:textColor="@color/colorTheme"
                android:textSize="@dimen/x30" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_already_money"   android:layout_margin="@dimen/x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3000"  android:gravity="center"
                android:textColor="@color/colorTheme"
                android:textSize="@dimen/x30" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_should_money"   android:layout_margin="@dimen/x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000"  android:gravity="center"
                android:textColor="@color/colorTextTheme"
                android:textSize="@dimen/x30" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_surplus_money" android:layout_margin="@dimen/x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额"  android:gravity="center"
                android:textColor="@color/colorTheme"
                android:textSize="@dimen/x32" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>