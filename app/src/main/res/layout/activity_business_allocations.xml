<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x100"
                    android:background="@color/colorShollwGray"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:paddingLeft="@dimen/x40"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="新增客户"
                        android:textColor="@color/colorTextTheme"
                        android:textSize="@dimen/x30" />

                    <TextView  android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="客户营业额"
                        android:textColor="@color/colorTextTheme"
                        android:textSize="@dimen/x30" />

                    <TextView  android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="毛利润(元)"
                        android:textColor="@color/colorTextTheme"
                        android:textSize="@dimen/x30" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="员工"
                        android:textColor="@color/colorTextTheme"
                        android:textSize="@dimen/x30" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="提成比例"
                        android:textColor="@color/colorTextTheme"
                        android:textSize="@dimen/x30" />

                    <TextView
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="提成金额"
                        android:textColor="@color/colorTextTheme"
                        android:textSize="@dimen/x30" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_allocating_table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
            </LinearLayout>
        <ImageButton
            android:id="@+id/btn_add_custom"
            android:background="@mipmap/btn_add_2"
            android:layout_marginRight="@dimen/x24"
            android:layout_marginBottom="@dimen/x122"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="@dimen/x184"
            android:layout_height="@dimen/x184" />
    </RelativeLayout>
</LinearLayout>
