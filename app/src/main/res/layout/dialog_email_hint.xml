<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/x560"
        android:layout_height="@dimen/y660"
        android:background="@drawable/btn_bg_panel"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x164"
                android:layout_height="@dimen/y173"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/x79"
                android:src="@mipmap/icon_excel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生成一份Excel表格发送到您的邮箱"
                android:layout_marginTop="@dimen/x56"
                android:textColor="#ff999999"
                android:textSize="@dimen/x28"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/edit_email"
                android:layout_width="@dimen/x500"
                android:layout_height="@dimen/y80"
                android:layout_gravity="center"
                android:textSize="@dimen/x28"
                android:singleLine="true"
                android:textColor="@color/black"
                android:paddingLeft="@dimen/x30"
                android:textColorHint="#ffcccccc"
                android:hint="请输入邮箱"
                android:background="@drawable/bg_edit_dialog"
                android:layout_marginTop="@dimen/x24"/>

            <Button
                android:id="@+id/btn_sure"
                android:layout_width="@dimen/x380"
                android:layout_height="@dimen/y88"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/x60"
                android:textSize="@dimen/x32"
                android:textColor="@color/white"
                android:background="@drawable/btn_bg_dialog"
                android:text="确认"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/al_close"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100"
            android:layout_alignParentRight="true">


            <ImageView
                android:layout_width="@dimen/x33"
                android:layout_height="@dimen/x33"
                android:layout_margin="@dimen/x42"
                android:src="@mipmap/icon_sign" />
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>