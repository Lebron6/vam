<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/view_null"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x37"/>
    <RelativeLayout
        android:layout_below="@+id/view_null"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <ImageView
            android:background="@mipmap/icon_quan"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20" />
        <TextView
            android:id="@+id/tv_dynamic_details"
            android:text="庞总办公费支出"
            android:layout_marginLeft="@dimen/x50"
            android:layout_centerVertical="true"
            android:textSize="@dimen/x28"
            android:textColor="@color/colorTextGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_dynamic_number"
            android:layout_alignParentRight="true"
            android:text="-50000"
            android:layout_marginLeft="@dimen/x30"
            android:layout_centerVertical="true"
            android:textSize="@dimen/x32"
            android:textColor="@color/colorTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>
