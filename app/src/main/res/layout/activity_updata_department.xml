<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar" android:id="@+id/toolBar"/>
<TextView
    android:text="部门名称"
    android:layout_marginLeft="@dimen/x24"
    android:layout_marginTop="@dimen/x79"
    android:textSize="@dimen/x32"
    android:gravity="center"
    android:textColor="@color/colorTheme"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_depart_name"
        android:textColor="@color/colorTextGray"
        android:layout_marginTop="@dimen/x40" android:singleLine="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center"  android:textCursorDrawable="@drawable/edit_cursor_theme"
        android:background="@drawable/et_bg_gray"
        android:layout_width="@dimen/x700"
        android:layout_height="@dimen/x100" />
    <RelativeLayout
        android:layout_width="@dimen/x656"
        android:layout_height="@dimen/x188"
        android:background="@mipmap/btn"
        android:layout_gravity="center_horizontal"
        >

        <Button
            android:id="@+id/btn_updata_depart"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/x580"
            android:layout_height="@dimen/x88"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_bg_selector"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/x32" />
    </RelativeLayout>
</LinearLayout>