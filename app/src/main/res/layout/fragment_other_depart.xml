<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_tab"
                android:layout_width="match_parent"
                android:background="@color/colorTheme"
                android:layout_height="@dimen/x100">
                <ImageButton
                    android:id="@+id/image_question"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/x23"
                    android:background="@mipmap/question_w" />
                <TextView
                    android:id="@+id/tab_depart"
                    android:gravity="center"
                    android:text="我的部门"
                    android:textColor="@color/colorTextTheme"
                    android:textSize="@dimen/x36"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x100"
                    android:layout_marginRight="@dimen/x100">

                </TextView>
                <ImageButton
                    android:id="@+id/image_message"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x23"
                    android:background="@mipmap/icon_infor" />
            </RelativeLayout>
            <FrameLayout
                android:id="@+id/layout_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></FrameLayout>
        </LinearLayout>




    </RelativeLayout>


</LinearLayout>
