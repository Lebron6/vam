<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_jiantou"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_jiantou3" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_below="@+id/image_jiantou"
    android:layout_toRightOf="@+id/image_jiantou"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_tips_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可滑动图表查看其它"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/x32" />
    <TextView
        android:id="@+id/tv_tips_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="月份"
        android:textColor="@color/colorTextTheme"
        android:textSize="@dimen/x42" /> <TextView
    android:id="@+id/tv_tips_white_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="哦！"
    android:textColor="@color/colorWhite"
    android:textSize="@dimen/x32" /></LinearLayout>


</RelativeLayout>