<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolBar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x74"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成员姓名"
                android:textColor="@color/colorTheme"
                android:textSize="@dimen/x32" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x21"
                android:background="@drawable/et_bg_gray"
                android:gravity="center"  android:singleLine="true"
                android:textColor="@color/colorTextGray"
                android:textCursorDrawable="@drawable/edit_cursor_theme" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:layout_marginTop="@dimen/x50"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码"
                android:textColor="@color/colorTheme"
                android:textSize="@dimen/x32" />

            <EditText
                android:id="@+id/et_phone_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x21"
                android:inputType="number"
                android:background="@drawable/et_bg_gray"
                android:gravity="center"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="@color/colorTextGray"
                android:textCursorDrawable="@drawable/edit_cursor_theme" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:layout_marginTop="@dimen/x50">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属部门"
                    android:textColor="@color/colorTheme"
                    android:textSize="@dimen/x32" />

                <EditText
                    android:id="@+id/et_depart"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x21"
                    android:background="@drawable/et_bg_gray"
                    android:gravity="center"  android:singleLine="true"
                    android:textColor="@color/colorTextGray"
                    android:textCursorDrawable="@drawable/edit_cursor_theme" />
            </LinearLayout>

            <ImageView
                android:id="@+id/image_show_departs"
                android:background="@mipmap/icon_down_b"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/x30"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/x50"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司职位"
                android:textColor="@color/colorTheme"
                android:textSize="@dimen/x32" />

            <EditText
                android:id="@+id/et_position"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x21"
                android:background="@drawable/et_bg_gray"
                android:gravity="center"  android:singleLine="true"
                android:textColor="@color/colorTextGray"
                android:textCursorDrawable="@drawable/edit_cursor_theme" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="@dimen/x656"
            android:layout_height="@dimen/x188"
            android:background="@mipmap/btn"
            android:layout_gravity="center_horizontal"
           >

            <Button
                android:id="@+id/btn_add"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/x580"
                android:layout_height="@dimen/x88"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_bg_selector"
                android:gravity="center"
                android:text="确定添加"
                android:textColor="@color/white"
                android:textSize="@dimen/x32" />
        </RelativeLayout>
        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"/>
    </LinearLayout>

</LinearLayout>