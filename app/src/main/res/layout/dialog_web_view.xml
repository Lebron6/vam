<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x540"
    android:layout_height="@dimen/x330"
    android:background="@drawable/layout_bg_my_value"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x52"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x38"
        android:text="提示"
        android:textColor="@color/colorTheme"
        android:textSize="@dimen/x32" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:layout_marginLeft="@dimen/x36"
        android:layout_marginRight="@dimen/x36"
        android:layout_marginTop="@dimen/x36"
        android:gravity="center"
        android:padding="@dimen/x5"
        android:text="确定启用该分配机制吗？"
        android:textColor="@color/colorTextGray"
        android:textSize="@dimen/x30" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/x46"
        android:background="@color/colorEtGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/colorTextGray"
            android:textSize="@dimen/x34" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorEtGray" />

        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorTextTheme"
            android:textSize="@dimen/x34" />
    </LinearLayout>
</LinearLayout>